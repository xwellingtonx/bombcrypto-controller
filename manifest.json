{
    "name": "BombCrypto Controller",
    "description": "Controller to help play bombcrypto adventure mode in mobile devices.",
    "version": "1.0.2",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "icons": {
      "16": "logos/logo-16.png",
      "48": "logos/logo-48.png",
      "128": "logos/logo-128.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [{
      "resources": ["controller.css"],
      "matches": ["https://app.bombcrypto.io/*"]
    }],    
    "action": {
      "default_title": "Active/Deactivate Controller"
    }
  }
